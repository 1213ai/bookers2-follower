 <table class="table">
            <tbody>
             <% @book.book_comments.each do |book_comment| %>
            <tr>
            <td>
             <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
             <%= book_comment.user.name %>
            </td>
            <td><%= book_comment.comment %>
             <% if book_comment.user == current_user %>
             <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), class: "btn btn-danger", method: :delete, remote: true %>
            </td>
            <% end %>
            <% end %>
           </tr>
        </tbody>
       </table>
     <div class="form-group">
        <%= form_with(model:[book, book_comment], remote: true) do |f| %>
        <%= f.text_area :comment, size: "100x7" %>
        <%= f.submit "送信" %>
        <% end %>
       </div>
           <!--formwith最後に　local: tru-->