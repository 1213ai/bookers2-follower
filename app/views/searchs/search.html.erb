
<% if @model == 'user' %>
<% if @records != nil %>
  <h3>Users search for "<%= @content %>"</h3>
  <table class="table">
          <thead>
           <tr>
             <th>image</th>
             <th>name</th>
             <th colspan="3"></th>
           </tr>
         </thead>
        <tbody>
        
         <% @records.each do |user| %>
        <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
        <%= link_to user_path(user.id) do %>
        <td><%= user.name %></td>
        <% end %>
       <td><%= link_to "Show", user_path(user.id)%></td>
      </tr>
       <% end %>
       <% end %>
     </tbody>
  </table>

<% else @model == 'books' %>
  <h3> Books search for "<%= @content %>"</h3>
   <table class="table">
          <thead>
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th></th>
           </tr>
         </thead>
        <tbody>
    <% @records.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
        <td><%= link_to book_path(book.id) do %>
            <%= book.title %>
            <% end %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
</table>
<% end %>